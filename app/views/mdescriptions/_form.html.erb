<%= form_with(model: @mdescription) do |form| %>
  <% if @mdescription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mdescription.errors.count, "error") %> prohibited this mdescription from being saved:</h2>

      <ul>
        <% @mdescription.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :specification %>
    <%= form.text_field :specification %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>


  <div class="field">
    <%= form.label :mobile %>
